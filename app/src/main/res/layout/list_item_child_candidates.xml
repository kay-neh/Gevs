<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/admin_candidate_imageCardView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/admin_candidate_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/img" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/admin_candidate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Yami Sukehiro"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/admin_candidate_constituency"
        app:layout_constraintStart_toEndOf="@+id/admin_candidate_imageCardView"
        app:layout_constraintTop_toTopOf="@+id/admin_candidate_imageCardView" />

    <TextView
        android:id="@+id/admin_candidate_constituency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Northern-Kunlun-Mountain"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/admin_candidate_imageCardView"
        app:layout_constraintStart_toStartOf="@+id/admin_candidate_name"
        app:layout_constraintTop_toBottomOf="@+id/admin_candidate_name" />

    <androidx.cardview.widget.CardView
        android:id="@+id/admin_party_imageCardView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/admin_party_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/red" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>