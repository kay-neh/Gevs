<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/voter_candidate_CardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="36dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/voter_candidate_imageCardView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/voter_candidate_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/img" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/voter_candidate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Yami Sukehiro"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/voter_candidate_imageCardView"
            app:layout_constraintTop_toTopOf="@+id/voter_candidate_imageCardView" />

        <TextView
            android:id="@+id/voter_candidate_constituency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Northern-Kunlun-Mountain"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/voter_candidate_imageCardView"
            app:layout_constraintStart_toStartOf="@+id/voter_candidate_name"
            app:layout_constraintTop_toBottomOf="@+id/voter_candidate_name" />

        <androidx.cardview.widget.CardView
            android:id="@+id/voter_candidate_party_imageCardView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/voter_candidate_see_detail_button"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/voter_candidate_party_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/red" />
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/voter_candidate_see_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/outline_keyboard_arrow_right_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

