<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/candidate_party_imageCardView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/candidate_party_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/red" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/candidate_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="John Smith"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/candidate_party_imageCardView"
        app:layout_constraintStart_toEndOf="@+id/candidate_party_imageCardView"
        app:layout_constraintTop_toTopOf="@+id/candidate_party_imageCardView" />

    <TextView
        android:id="@+id/candidate_constituency_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Northern-Kunlun-Mountain"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/candidate_name_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/candidate_name_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>