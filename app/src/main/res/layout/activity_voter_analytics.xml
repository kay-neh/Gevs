<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.user.voter.result.analytics.VoterAnalyticsActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/admin_analytics_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIconTint="?attr/colorOnSurface"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
            app:title="Analytics" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/admin_analytics_toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/chart_viewgroup"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/textView16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread">

                    <com.anychart.AnyChartView
                        android:id="@+id/any_chart_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Winners"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintBottom_toTopOf="@+id/analytics_recyclerview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chart_viewgroup" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/analytics_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView16"
                    tools:itemCount="6"
                    tools:listitem="@layout/list_item_child_candidates" />

                <TextView
                    android:id="@+id/admin_analytics_additional_info_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="Additional Information"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/analytics_recyclerview" />

                <TextView
                    android:id="@+id/admin_analytics_registeredVoters_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:text="Registered Voters:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/admin_analytics_additional_info_textView" />


                <TextView
                    android:id="@+id/value_registeredVoters_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="50"
                    app:layout_constraintBottom_toBottomOf="@+id/admin_analytics_registeredVoters_textView"
                    app:layout_constraintStart_toEndOf="@+id/admin_analytics_registeredVoters_textView"
                    app:layout_constraintTop_toTopOf="@+id/admin_analytics_registeredVoters_textView" />

                <TextView
                    android:id="@+id/admin_analytics_verifiedVoters_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:text="Verified Voters:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/admin_analytics_registeredVoters_textView" />

                <TextView
                    android:id="@+id/value_verifiedVoters_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48"
                    app:layout_constraintBottom_toBottomOf="@+id/admin_analytics_verifiedVoters_textView"
                    app:layout_constraintStart_toStartOf="@+id/value_registeredVoters_textView"
                    app:layout_constraintTop_toTopOf="@+id/admin_analytics_verifiedVoters_textView" />

                <TextView
                    android:id="@+id/admin_analytics_activeVoters_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:text="Active voters:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/admin_analytics_verifiedVoters_textView" />


                <TextView
                    android:id="@+id/value_activeVoters_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    app:layout_constraintBottom_toBottomOf="@+id/admin_analytics_activeVoters_textView"
                    app:layout_constraintStart_toStartOf="@+id/value_verifiedVoters_textView"
                    app:layout_constraintTop_toTopOf="@+id/admin_analytics_activeVoters_textView" />

                <TextView
                    android:id="@+id/admin_analytics_duration_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="64dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/admin_analytics_activeVoters_textView"
                    tools:text="Election duration" />

                <TextView
                    android:id="@+id/value_duration_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/admin_analytics_duration_textView"
                    app:layout_constraintStart_toStartOf="@+id/value_activeVoters_textView"
                    app:layout_constraintTop_toTopOf="@+id/admin_analytics_duration_textView"
                    tools:text="180 mins" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>